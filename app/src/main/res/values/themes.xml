<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- App Theme -->
    <style name="Theme.Snaptask" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary Colors -->
        <item name="colorPrimary">@color/sapphireBlue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary Colors -->
        <item name="colorSecondary">@color/softMintGreen</item>
        <item name="colorOnSecondary">@color/charcoalBlack</item>

        <!-- Backgrounds and Surfaces -->
        <item name="android:colorBackground">@color/whisperWhite</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnBackground">@color/charcoalBlack</item>
        <item name="colorOnSurface">@color/charcoalBlack</item>

        <!-- Error -->
        <item name="colorError">@color/amberYellow</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/sapphireBlue</item>

        <!-- Text Colors -->
        <item name="android:textColorPrimary">@color/charcoalBlack</item>
        <item name="android:textColorSecondary">@color/slateGray</item>

        <!-- Action Bar & Title Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- System Navigation Bar -->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:navigationBarDividerColor" tools:targetApi="28">@color/softMintGreen</item>

        <!-- BottomNavigationView Styling -->
<!--        <item name="bottomNavigationStyle">@style/Snaptask.BottomNavigation</item>-->
        <item name="bottomNavigationStyle">@style/CustomBottomNav</item>


    </style>

    <!-- BottomNavigation Custom Style -->
    <style name="Snaptask.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/selector_bottom_nav</item>
        <item name="itemTextColor">@color/selector_bottom_nav</item>
        <item name="android:background">@color/white</item>
        <item name="elevation">8dp</item>
    </style>
<!--    <item name="bottomNavigationStyle">@style/CustomBottomNav</item>-->

</resources>
