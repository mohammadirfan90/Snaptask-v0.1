<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".LoginActivity"
    android:background="@drawable/background"
    tools:ignore="ExtraText">


    <TextView
        android:id="@+id/appTitle"
        android:layout_width="175dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textColor="@android:color/black"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-6dp" />

    <ImageView
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:contentDescription="Google Logo"
        android:src="@drawable/img_3"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="-11dp" />

    <EditText
        android:id="@+id/Client"
        android:layout_width="97dp"
        android:layout_height="61dp"
        android:background="@drawable/draw"
        android:padding="21dp"
        android:text="Client"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="7dp"
        tools:layout_editor_absoluteY="53dp" />

    <EditText
        android:id="@+id/Freelancer"
        android:layout_width="169dp"
        android:layout_height="60dp"
        android:background="@drawable/draw"
        android:padding="21dp"
        android:text="Freelancer"
        android:textColor="@color/black"
        android:textSize="18sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="53dp" />

    <TextView
        android:id="@+id/full_name"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:text="Full Name"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="137dp" />


    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="132dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter your full name"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

    <TextView
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:text="E-mail"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="241dp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="236dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter your E-mail"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

    <TextView
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:text="Password"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="344dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="332dp"
        android:background="@android:drawable/edit_text"
        android:hint="Enter your password"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

    <TextView
        android:layout_width="185dp"
        android:layout_height="39dp"
        android:text="Confirm Password"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="442dp" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginTop="428dp"
        android:background="@android:drawable/edit_text"
        android:hint="Confirm your password"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/appTitle" />

    <Button
        android:id="@+id/btn"
        android:layout_width="447dp"
        android:layout_height="50dp"
        android:padding="2sp"
        android:text="Sign Up"
        android:textSize="22dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-35dp"
        tools:layout_editor_absoluteY="544dp" />

    <TextView
        android:layout_width="153dp"
        android:layout_height="27dp"
        android:text="or Sign Up with"
        android:textSize="20dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="591dp" />

    <LinearLayout
        android:id="@+id/googleLoginBox"
        android:layout_width="714dp"
        android:layout_height="52dp"
        android:layout_margin="16dp"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-3dp"
        tools:layout_editor_absoluteY="618dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="12dp"
            android:contentDescription="Google Logo"
            android:src="@drawable/img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Login with Google"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/have_account"
        android:layout_width="258dp"
        android:layout_height="74dp"
        android:text="Already have an account? Sign In"
        android:textColor="#6C757D"
        android:textSize="14sp"

        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="86dp"
        tools:layout_editor_absoluteY="667dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
